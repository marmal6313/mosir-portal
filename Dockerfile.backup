FROM node:20-alpine

WORKDIR /app

# Kopiuj pliki package.json i package-lock.json
COPY package*.json ./

# Zainstaluj wszystkie zależności (w tym dev dependencies potrzebne do build'u)
RUN npm ci

# Kopiuj kod aplikacji
COPY . .

# Zbuduj aplikację
RUN npm run build

# Usuń dev dependencies po build'u
RUN npm prune --production

# Eksponuj port 3000
EXPOSE 3000

# Uruchom aplikację
CMD ["npm", "start"]

